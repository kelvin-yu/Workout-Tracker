<html ng-app="workoutApp" class="ng-cloak">
	<head>
		<title>Workout tracker</title> 
	   <style>
			[ng\:cloak], [ng-cloak], .ng-cloak {
			  display: none;
			}
		</style>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="stylesheets/style.css">
	</head>
	<body bgcolor="white" >
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
						<span class="icon-bar"></span>	
						<span class="icon-bar"></span>	
						<span class="icon-bar"></span>	
					</button>	
					<a class="navbar-brand" href="#">Workout Tracker</a>
				</div>
				<div class="collapse navbar-collapse" id="navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="active" ng-show="loggedIn"><a href="#">Routines</a></li>
						<li class="active" ng-show="loggedIn"><a href="#">Workouts</a></li>
						<li class="active" ng-show="loggedIn"><a href="#">Exercises</a></li>
					</ul>
					<form class="navbar-form navbar-right" ng-hide="loggedIn">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="username" ng-model="user.username">
							<input type="password" class="form-control" placeholder="password" ng-model="user.password">
						</div>
						<button type="submit" class="btn btn-default" ng-click="login()">Log in</button>
					</form>
					<button type="button" class="btn btn-default navbar-btn navbar-right" ng-click="logout()" ng-show="loggedIn">Log Out</button>
				</div>
			</div>
		</nav>		

		<ng-view></ng-view>
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.js"></script>
    	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-route.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-resource.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-cookies.js"></script>

 		<script src="javascripts/workoutApp.js"></script>
		<script src="javascripts/controllers/mainController.js"></script>
		<script src="javascripts/controllers/exerciseController.js"></script>
		<script src="javascripts/controllers/routineController.js"></script>
		<script src="javascripts/controllers/workoutController.js"></script>
		<script src="javascripts/controllers/homeController.js"></script>
	</body>
</html>
